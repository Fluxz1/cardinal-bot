generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Modlog {
  id         Int       @id @default(autoincrement())
  staffId    String
  staffName  String
  memberId   String
  guildId    String
  memberName String
  reason     String?   @default("No reason")
  type       String
  length     String?
  createdAt  DateTime  @default(now())
  warn       Warn[]
  modnick    Modnick[]
  mute       Mute[]
  ban        Ban[]
}

model Ban {
  id        Int       @id @default(autoincrement())
  memberId  String
  modlog    Modlog    @relation(fields: [modlogId], references: [id])
  createdAt DateTime  @default(now())
  expiresAt DateTime?
  modlogId  Int
}

model Mute {
  id        Int       @id @default(autoincrement())
  memberId  String
  modlog    Modlog    @relation(fields: [modlogId], references: [id])
  createdAt DateTime  @default(now())
  expiresAt DateTime?
  modlogId  Int
}

model Warn {
  id        Int      @id @default(autoincrement())
  memberId  String
  warnUid   String   @unique
  modlog    Modlog   @relation(fields: [modlogId], references: [id])
  modlogId  Int
  createdAt DateTime @default(now())
}

model Modnick {
  id                Int      @id @default(autoincrement())
  memberId          String   @unique
  guildId           String
  originalNickname  String
  moderatedNickname String
  frozen            Boolean  @default(false)
  modlog            Modlog   @relation(fields: [modlogId], references: [id])
  modlogId          Int
  createdAt         DateTime @default(now())

  @@unique([memberId, guildId])
}

model Afk {
  id       Int    @id @default(autoincrement())
  memberId String
  guildId  String
  afkNick  String

  afkMessage String

  createdAt DateTime @default(now())

  @@unique([memberId, guildId])
}

model Guild {
  guildId       String @id @unique
  roleTrainee   String @default("0")
  roleStaff     String @default("0")
  roleModerator String @default("0")
  roleAdmin     String @default("0")
  roleMuted     String @default("0")

  channelModlog String @default("0")

  prefix String @default(">")
}

model Message {
  id        Int    @id @default(autoincrement())
  messageId String
  memberId  String
  channelId String
  guildId   String
  length    Int

  createdAt DateTime @default(now())
}

model Command {
  id       Int      @id @default(autoincrement())
  name     String
  authorId String
  usedAt   DateTime @default(now())
}
